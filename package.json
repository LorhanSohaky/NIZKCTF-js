{
  "name": "nizkctf",
  "version": "0.0.0",
  "description": "A distributed and openly auditable CTF platform",
  "main": "index.js",
  "scripts": {
    "start": "node -r esm src/index.js",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "prettier-standard src/**/*.js --lint",
    "build": "babel src/ -d build/"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier-standard --lint",
      "git add"
    ],
    "__tests__/**/*.js": [
      "prettier-standard --lint",
      "git add"
    ],
    "package.json": [
      "prettier-standard --lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LorhanSohaky/nizkctf.git"
  },
  "keywords": [
    "ctf"
  ],
  "author": "Lorhan Sohaky",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LorhanSohaky/nizkctf/issues"
  },
  "homepage": "https://github.com/LorhanSohaky/nizkctf#readme",
  "dependencies": {
    "apisauce": "^1.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@types/jest": "^24.9.1",
    "babel-jest": "^25.1.0",
    "esm": "^3.2.25",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "prettier-standard": "^16.1.0"
  }
}
